@article{hawkins_toward_2015-2,
  title = {Toward a Model-Based Cognitive Neuroscience of Mind Wandering},
  author = {Hawkins, G. E. and Mittner, M. and Boekel, W. and Heathcote, A. and Forstmann, B. U.},
