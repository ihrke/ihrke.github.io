@article{schrobsdorff_computational_2007-1,
  title = {A Computational Approach to Negative Priming},
  author = {Schrobsdorff, H. and Ihrke, M. and Kabisch, B. and Behrendt, J. and Hasselhorn, M. and Herrmann, J. Michael},
  date = {2007-09-01},
